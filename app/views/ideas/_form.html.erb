<%= form_for [@user, @idea] do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :idea %>
<%= f.text_field :idea %>

<%= f.label :category_id %>
<%= f.collection_select(:category_id, @categories, :id, :name) %>

<%= f.label :image %>
<%= f.collection_select(:image, Image.all, :id, :name) %>

<%= f.submit %>
<% end %>
