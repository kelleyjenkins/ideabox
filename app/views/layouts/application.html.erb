<!DOCTYPE html>
<html>
  <head>
    <title>Ideabox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <% if current_user == nil %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Idea Box</a>
        </div>
      </div>
    </nav>
    <% else current_user == current_user %>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
              <div class="navbar-brand" <%= link_to "Idea Box", user_path(current_user)%> </div
          </div>

          <ul class="nav navbar-nav">
            <li class="active"></li>
            <% if current_user == current_user %>
            <li><%= link_to "Ideas", user_ideas_path(current_user) %></li>
            <% if current_user.admin? %>
            <li><%= link_to "Categories", admin_categories_path %></li>
            <li><%= link_to "Images", admin_images_path%></li>
            <% end %>
            <li><%= link_to 'Logout', logout_path, :method => :delete %></li>
            <% end  %>
          </ul>
        </div>
      </nav>
    <% end  %>

    <%= yield %>

  </body>
</html>
